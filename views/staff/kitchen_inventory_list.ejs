<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= title %></title>
     <style>
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .near-expiry { color: orange; font-weight: bold; }
        .update-form { display: inline-flex; align-items: center; gap: 5px; }
        .update-form input[type="number"] { width: 60px; }
        .alert { padding: 10px; margin-bottom: 15px; border-radius: 4px; }
        .alert-success { background-color: #dff0d8; border: 1px solid #d6e9c6; color: #3c763d; }
        .alert-error { background-color: #f2dede; border: 1px solid #ebccd1; color: #a94442; }
    </style>
</head>
<body>
    <%- include('../partials/header', { user: user }) %>

    <h1><%= title %></h1>
    <p><a href="/kitchen/inventory/add">Add New Inventory Item</a></p>

     <%# Display messages based on query parameters from redirects %>
    <% if (locals.query && query.status === 'added_success') { %>
        <div class="alert alert-success">New inventory item added successfully.</div>
    <% } else if (locals.query && query.update_status === 'success') { %>
         <div class="alert alert-success">Inventory stock updated successfully.</div>
    <% } else if (locals.query && query.update_status === 'error' || locals.query && query.update_status === 'db_error' || locals.query && query.update_status === 'not_found' ) { %>
        <div class="alert alert-error">Error updating inventory.</div>
    <% } %>


     <% if (items && items.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                    <th>Expiry Date</th>
                    <th>Update Stock (+/-)</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => {
                    let expiryClass = '';
                    if (item.expiry_date) {
                        const today = new Date(); today.setHours(0,0,0,0);
                        const expiry = new Date(item.expiry_date);
                        const diffDays = Math.ceil((expiry - today) / (1000 * 60 * 60 * 24));
                        if (diffDays <= 3 && diffDays >= 0) { // Example: Highlight if expiring within 3 days
                            expiryClass = 'near-expiry';
                        } else if (diffDays < 0) {
                            expiryClass = 'alert-error'; // Already expired
                        }
                    }
                 %>
                    <tr id="item-<%= item.id %>" class="<%= expiryClass %>">
                        <td><%= item.item_name %></td>
                        <td><%= item.category || '-' %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.unit %></td>
                        <td><%= item.expiry_date ? new Date(item.expiry_date).toLocaleDateString() : '-' %></td>
                        <td>
                             <form action="/kitchen/inventory/update/<%= item.id %>" method="POST" class="update-form">
                                <input type="number" name="change_amount" value="0" required title="Enter amount to add (positive) or remove (negative)">
                                <button type="submit">Update</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No inventory items found.</p>
    <% } %>

     <p><a href="/kitchen/dashboard">Back to Dashboard</a></p>

    <%- include('../partials/footer') %>
</body>
</html>